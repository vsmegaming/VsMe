<h1>VSMe Gaming</h1>

<%= link_to "Play Game", new_games_path, class: "btn" %>

<table class="table">
  <thead>
    <tr>
      <th>Game</th>
      <th>Score</th>
      <th>Wager</th>
      <th>Outcome</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td>Pong</td>
      <td><%= game.score %></td>
      <td><%= game.credits_wagered %></td>
      <% if game.result.id == current_user.id %>
        <td>Winner</td>
      <% else %>
        <td>Loser</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
