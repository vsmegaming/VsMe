<div class="sign-in-center">
  <h1 class="sign-in-logo">VsMe Gaming</h1>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.text_field :user_name, :autofocus => true, placeholder: "User Name" %>
    <%= f.email_field :email, placeholder: "email address" %>
    <%= f.password_field :password, placeholder: "password" %>
    <%= f.password_field :password_confirmation, placeholder: "confirm password" %>

    <p>By clicking the Sign Up button you acknowledge that you
    are of age and reside in a state that allows skills gaming</p>

    <%= f.submit "Sign up", class: "btn-sign-in" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
