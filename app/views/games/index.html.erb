<div data-no-turbolink>
  <%= link_to "Play Game", new_games_path, class: "btn" %>
  <h4 class="pull-right">Credits: <%= current_user.credits %></h4>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Score</th>
      <th>Wager</th>
      <th>Outcome</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.score %></td>
      <td><%= game.credits_wagered %></td>
      <% if game.result.winning_user_id == current_user.id %>
        <td>Winner</td>
      <% elsif game.result.winning_user_id == nil %>
        <td>-</td>
      <% elsif game.result.winning_user_id == -1 %>
        <td>Tie</td>
      <% else %>
        <td>Loser</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

