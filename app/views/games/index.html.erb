<div data-no-turbolink>
  <%= link_to "Play Game", new_games_path, class: "btn" %>
  <h4 class="pull-right">Credits: <%= current_user.credits %></h4>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Score</th>
      <th>Wager</th>
      <th>Outcome</th>
      <th>Opponent</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
    <tr>
      <td><%= game.score %></td>
      <td><%= game.credits_wagered %></td>
      <td><%= game.outcome(current_user) %></td>
      <td><%= game.opponent(current_user) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

