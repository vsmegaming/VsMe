<div class='hidden'>
  <%= form_for @game do |f| %>
    <%= f.number_field :score %>
    <%= f.submit "Submit" %>
  <% end %>
</div>

<div class="sign-in-center">
  <% if current_user.credits <= 0 %>
    <h4>No Credits<h4>
  <% else %>
    <button id='start' class="btn-main">Play Snake!</button>
  <% end %>
</div>

<div class="game">
  <div class='score-div'><span id='score'></span></div>
  <canvas id='canvas'></canvas>
  <table class='hud-group'>
    <tr>
      <td><div class='time-div'><i class='icon-time'></i><br><span id='time'>0:00</span></div></td>
      <td><div class='user-div'><i class='icon-user'></i><br><%= current_user.user_name %></div></td>
      <td><div class='credits-div'><i class='icon-tags'></i><br><%= current_user.credits %></div></td>
    </tr>
  </table>
</div>
